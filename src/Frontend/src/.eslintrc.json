{
  "env": {
    "browser": true,
    "amd": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "prettier" // prettier
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "react", "prettier"], // prettier
  "rules": {
    "react/react-in-jsx-scope": "off", // Desactiva la regla predeterminada de react-in-jsx-scope
    "@typescript-eslint/explicit-module-boundary-types": "off" // opcional, para deshabilitar advertencias sobre devoluci√≥n de tipos
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
